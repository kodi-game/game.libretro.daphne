<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.daphne"
		name="Arcade (Daphne)"
		version="0.0.1.10"
		provider-name="Matt Ownby">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>zip</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2+</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.daphne</source>
		<assets>
			<icon>resources/icon.png</icon>
			<screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/screenshot-02.jpg</screenshot>
		</assets>
		<summary lang="en_GB">Arcade (Daphne)</summary>
		<description lang="en_GB">DAPHNE is a multi-arcade LaserDisc emulator that lets one play the original LaserDisc version on a PC.</description>
	</extension>
</addon>
